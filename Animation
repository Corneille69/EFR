  <script>
    (function(){
      // Durée du preloader en millisecondes (modifie ici si besoin)
      const PRELOAD_TIME_MS = 3500; // 3.5 secondes

      // URL cible après l'animation — modifie ici selon ta page finale
      const TARGET_URL = 'index.html'; // ex: '/index.html' ou 'https://tonsite.com'

      const pre = document.getElementById('preloader');
      const app = document.getElementById('app');
      const bar = document.getElementById('bar');

      // animation de progression artificielle (smooth)
      const start = performance.now();
      const duration = PRELOAD_TIME_MS;
      function tick(now){
        const t = Math.min(1, (now - start) / duration);
        // easeOutCubic
        const eased = 1 - Math.pow(1 - t, 3);
        bar.style.width = Math.round(eased * 100) + '%';
        bar.parentElement.setAttribute('aria-valuenow', Math.round(eased*100));
        if(t < 1) requestAnimationFrame(tick);
        else finishAndRedirect();
      }
      requestAnimationFrame(tick);

      // function to hide preloader and then redirect to TARGET_URL
      function finishAndRedirect(){
        // petit fondu visuel
        pre.classList.add('hidden');
        pre.setAttribute('aria-hidden','true');
        // reveal app briefly (optionnel)
        app.classList.add('visible');
        app.setAttribute('aria-hidden','false');
        document.body.style.overflow = '';

        // attendre la transition CSS (.6s) puis rediriger
        setTimeout(() => {
          // redirige vers la page finale
          window.location.href = TARGET_URL;
        }, 650);
      }

      // Safety: also force-hide after max 6s in case of issues (and redirect)
      setTimeout(() => {
        if (!pre.classList.contains('hidden')) {
          finishAndRedirect();
        }
      }, Math.max(PRELOAD_TIME_MS, 6000));
    })();
  </script>
</body>
